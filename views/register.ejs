<% layout("boilerplate.ejs") %>

<style>
  body{
    background-color: rgb(208, 208, 255);
  }
</style>
<div class="container">

    <div class="col-6 offset-3 mb-5 mt-5">

    <div class="card shadow m-3 p-5">

    <h1 style="color:rgb(0, 0, 119);" class="mb-3 text-center">Register</h1>


    <form action="/user/register" method="post">


        
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>


            <div class="mb-3">
              <label for="exampleInputPassword" class="form-label">Username</label>
              <input name="username" type="text" class="form-control" id="exampleInputPassword">
            </div>


            <div class="mb-3">
              <label for="exampleInputPassword2" class="form-label">Contact Number</label>
              <input name ="number" type="tel" class="form-control" id="exampleInputPassword2">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input name="password" type="password" class="form-control" id="exampleInputPassword1">
            </div>
            
            <button type="submit" class="btn btn-primary">Register</button>
          


    </form>
</div>

</div>
</div>
</div>
