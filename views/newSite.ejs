<% layout("boilerplate.ejs") %>

<div class="container m-3 p-5">




<form action="/sites/new" method="post">



    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name of Site</label>
        <input name="sitename" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Image of the Site</label>
        <input name="image" type="url" class="form-control" id="exampleFormControlInput1" placeholder="www.image.com">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">City of the Site</label>
        <input name="city" type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">When was the site built/founded</label>
        <input name="built" type="number" class="form-control" id="exampleFormControlInput1" placeholder="">
    </div>


      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>

      <button class="btn btn-success">
        Add Site
      </button>

</form>

</div>
