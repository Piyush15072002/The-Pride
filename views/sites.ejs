<% layout("boilerplate.ejs") %>

<style>

  body{
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    background-color: rgb(202, 202, 255);
  }

</style>

<div class="container p-5">

<% for(let site in sites){ %> 

  <div class="card mb-3 shadow">
    <div class="row">
        <div class="col-md-4">
            
            <img style="height:100%;" class="img-fluid" src="<%= sites[site].image %>"">
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h1 class="card-title">
                    <%=sites[site].sitename %>
                </h1>
                <h5 style="color:rgb(245, 11, 11)"><%=sites[site].city %>, Maharashtra</h5>
                <p class="card-text">
                    <%=(sites[site].description).slice(0,170) %>...
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Built in <%=sites[site].built %>
                    </small>
                </p>
                <a style="background-color:darkblue;" href="/sites/<%=sites[site]._id%>" class="btn btn-primary">Explore <%=sites[site].sitename %>
                </a>
            </div>
        </div>
    </div>
</div>
<% } %>





</div>


